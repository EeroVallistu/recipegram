<!-- Recipe detail view -->
<div class="recipe-detail-container">
    <% if (locals.error) { %>
        <div class="error-message">
            <%= error %>
        </div>
    <% } %>

    <% if (locals.recipe) { %>
        <div class="recipe-header">
            <a href="/" class="back-link"><< Back to Recipes</a>
            <div class="title-favorite-container">
                <h1 class="recipe-title"><%= recipe.title %></h1>
                <% if (locals.user) { %>
                <button id="favoriteButton" class="favorite-button-large <%= recipe.is_favorite ? 'active' : '' %>" data-recipe-id="<%= recipe.id %>" data-is-favorite="<%= recipe.is_favorite ? 'true' : 'false' %>">
                    <span class="favorite-icon-large">â™¥</span>
                    <span class="favorite-text"><%= recipe.is_favorite ? 'Remove from Favorites' : 'Add to Favorites' %></span>
                </button>
                <% } %>
            </div>
            <span class="recipe-category"><%= recipe.category_name %></span>
        </div>

        <div class="recipe-content-wrapper">
            <div class="recipe-image-container">
                <% if (recipe.image_url) { %>
                    <img src="<%= recipe.image_url %>" alt="<%= recipe.title %>" class="recipe-detail-image">
                <% } else { %>
                    <div class="recipe-image-placeholder large">No Image Available</div>
                <% } %>

                <div class="recipe-meta">
                    <div class="meta-item">
                        <span class="meta-label">Posted by:</span>
                        <span class="meta-value"><%= recipe.user_email %></span>
                    </div>
                    <div class="meta-item">
                        <span class="meta-label">Date:</span>
                        <span class="meta-value"><%= new Date(recipe.created_at).toLocaleDateString() %></span>
                    </div>
                </div>
            </div>

            <div class="recipe-details">
                <div class="recipe-section">
                    <h2 class="section-title">Ingredients</h2>
                    <ul class="ingredients-list">
                        <% recipe.ingredients.forEach(ingredient => { %>
                            <li class="ingredient-item">
                                <span class="ingredient-amount"><%= ingredient.amount %></span>
                                <span class="ingredient-name"><%= ingredient.name %></span>
                            </li>
                        <% }); %>
                    </ul>
                </div>

                <div class="recipe-section">
                    <h2 class="section-title">Instructions</h2>
                    <div class="recipe-description">
                        <%= recipe.description %>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="not-found-message">
            <h2>Recipe Not Found</h2>
            <p>The recipe you're looking for couldn't be found.</p>
            <a href="/" class="button primary-button">Back to Home</a>
        </div>
    <% } %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const favoriteButton = document.getElementById('favoriteButton');
    
    if (favoriteButton) {
        favoriteButton.addEventListener('click', function() {
            const recipeId = this.getAttribute('data-recipe-id');
            const isFavorite = this.getAttribute('data-is-favorite') === 'true';
            
            // Toggle favorite status
            const method = isFavorite ? 'DELETE' : 'POST';
            
            fetch(`/api/favorites/${recipeId}`, {
                method: method,
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Toggle the active class
                    this.classList.toggle('active');
                    
                    // Update the data attribute and button text
                    const newStatus = !isFavorite;
                    this.setAttribute('data-is-favorite', newStatus.toString());
                    
                    const textSpan = this.querySelector('.favorite-text');
                    if (textSpan) {
                        textSpan.textContent = newStatus ? 'Remove from Favorites' : 'Add to Favorites';
                    }
                    
                    // Optional: Show a brief notification
                    const action = newStatus ? 'added to' : 'removed from';
                    const notification = document.createElement('div');
                    notification.className = 'favorite-notification';
                    notification.textContent = `Recipe ${action} favorites`;
                    document.body.appendChild(notification);
                    
                    setTimeout(() => {
                        notification.remove();
                    }, 2000);
                } else {
                    console.error('Failed to update favorite:', data.error);
                }
            })
            .catch(error => {
                console.error('Error updating favorite status:', error);
            });
        });
    }
});
</script>

