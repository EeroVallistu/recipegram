<div class="welcome-section">
  <h2>Welcome to RecipeGram</h2>
  <p>Share and discover amazing recipes with our community.</p>

  <% if (!locals.user) { %>
    <div class="cta-buttons">
      <a href="/register" class="button primary-button">Join Us</a>
      <a href="/login" class="button secondary-button">Log in</a>
    </div>
  <% } else { %>
    <div class="user-dashboard">
      <h3>Your Recipe Dashboard</h3>
      <p>Welcome back! You can start adding your recipes.</p>
      <div class="dashboard-actions">
        <a href="/logout" class="button outline-button">Log out</a>
      </div>
    </div>
  <% } %>
</div>